<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class = "PatchOperationAdd">
		<xpath>*/ThingDef[defName = "Plant_Ambrosia"]/plant</xpath>
		<value>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<neverBlightable>true</neverBlightable>
		</value>
	</Operation>
	
	<Operation Class = "PatchOperationAdd">
		<xpath>*/ThingDef[defName = "Glowstool"]/plant</xpath>
