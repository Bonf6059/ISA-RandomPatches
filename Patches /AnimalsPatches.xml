							<Wildness>0.95</Wildness>
						</value>
					</Operation>
					<Operation Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Thrumbo"]</xpath>
						<value>
    						<comps>
      							<Operation Class="CompProperties_Shearable">
        							<woolDef>Leather_Thrumbo</woolDef>
     								<shearIntervalDays>30</shearIntervalDays>
     								<woolAmount>90</woolAmount>
    							</Operation>
     							<Operation Class="CompProperties_Milkable">
      								<milkDef>Milk</milkDef>
       								<milkIntervalDays>15</milkIntervalDays>
       								<milkAmount>40</milkAmount>
      							</Operation>
  							</comps>
						</value>
					</Operation>
					<Operation Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="Thrumbo"]/race/baseHungerRate</xpath>
						<value>
    						<baseHungerRate>2.4</baseHungerRate>
						</value>
					</Operation>
					<Operation Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="Thrumbo"]/statBases/ComfyTemperatureMin</xpath>
						<value>
							<ComfyTemperatureMin>-70</ComfyTemperatureMin>
						</value>
					</Operation>
					<Operation Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="Leather_Thrumbo"]/statBases/StuffPower_Insulation_Cold</xpath>
						<value>
