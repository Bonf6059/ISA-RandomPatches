  <RecipeDef ParentName="ISA_MakeDrugBase">
		<defName>ISA_Make_Neutroamine</defName>
		<label>make neutroamine x5</label>
		<description>Make neutroamine x5.</description>
		<jobString>Making neutroamine x5.</jobString>
		<workAmount>3000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
        <li>Chemfuel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
			</thingDefs>
		</defaultIngredientFilter>
		<products>
			<Neutroamine>5</Neutroamine>
		</products>
	</RecipeDef>

